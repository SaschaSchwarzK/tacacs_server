{
  "title": "TACACS+ Server Overview",
  "schemaVersion": 36,
  "version": 1,
  "uid": "tacacs-overview",
  "timezone": "browser",
  "panels": [
    {
      "type": "stat",
      "title": "Auth Requests",
      "gridPos": {"x": 0, "y": 0, "w": 8, "h": 4},
      "targets": [
        {"expr": "sum(tacacs_auth_requests_total)", "legendFormat": "requests"}
      ]
    },
    {
      "type": "stat",
      "title": "Auth Duration (p95)",
      "gridPos": {"x": 8, "y": 0, "w": 8, "h": 4},
      "targets": [
        {"expr": "histogram_quantile(0.95, sum(rate(tacacs_auth_duration_seconds_bucket[5m])) by (le))"}
      ],
      "fieldConfig": {"defaults": {"unit": "s"}}
    },
    {
      "type": "stat",
      "title": "Active Connections",
      "gridPos": {"x": 16, "y": 0, "w": 8, "h": 4},
      "targets": [
        {"expr": "tacacs_active_connections"}
      ]
    },
    {
      "type": "graph",
      "title": "Auth Requests (rate)",
      "gridPos": {"x": 0, "y": 4, "w": 24, "h": 8},
      "targets": [
        {"expr": "sum(rate(tacacs_auth_requests_total[1m])) by (status)"}
      ]
    },
    {
      "type": "graph",
      "title": "Auth Failures (rate)",
      "gridPos": {"x": 0, "y": 12, "w": 12, "h": 8},
      "targets": [
        {"expr": "sum(rate(tacacs_auth_requests_total{status=\"fail\"}[1m])) by (backend)"}
      ],
      "legend": {"show": true}
    },
    {
      "type": "graph",
      "title": "Accounting Records (rate)",
      "gridPos": {"x": 12, "y": 12, "w": 12, "h": 8},
      "targets": [
        {"expr": "sum(rate(tacacs_accounting_records_total[1m])) by (status)"}
      ],
      "legend": {"show": true}
    },
    {
      "type": "stat",
      "title": "Server Uptime (s)",
      "gridPos": {"x": 0, "y": 20, "w": 8, "h": 4},
      "targets": [
        {"expr": "tacacs_server_uptime_seconds"}
      ],
      "fieldConfig": {"defaults": {"unit": "s"}}
    }
  ]
}
