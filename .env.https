# Required by bootstrap-https.sh
CUSTOMER_ID=your_customer_id_here
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string

# Optional overrides (defaults shown)
STORAGE_CONTAINER=tacacs-data
BACKUP_PREFIX=${CUSTOMER_ID}/backups/
SKIP_WEB_ADMIN=0            # set to 1 to skip Caddy/HTTPS startup

# Admin/API credentials (exported if set)
ADMIN_PASSWORD=
API_TOKEN=

# Certificate retrieval/generation (fetch_cert.py)
KEYVAULT_URL=               # e.g. https://your-vault.vault.azure.net/
CERT_NAME=                  # Key Vault secret name containing PFX
CERT_PASSWORD=              # Password for PFX if required
CERT_FALLBACK_DOMAIN=*.kyndryl.com
CERT_DIR=/certs

# TACACS/RADIUS/network basics
TACACS_DEFAULT_SECRET=change_me
TACACS_MAX_PACKET_LENGTH=4096
TACACS_MAX_CONNECTIONS_PER_IP=20
TACACS_USE_THREAD_POOL=true
TACACS_IPV6_ENABLED=false
TACACS_LISTEN_BACKLOG=128
TACACS_CLIENT_TIMEOUT=15
TACACS_TCP_KEEPALIVE=true
TACACS_TCP_KEEPIDLE=60
TACACS_TCP_KEEPINTVL=10
TACACS_TCP_KEEPCNT=5

# RADIUS ports (exposed in Dockerfile)
RADIUS_ENABLED=false
RADIUS_AUTH_PORT=1812
RADIUS_ACCT_PORT=1813

# Logging/config paths inside container
LOG_LEVEL=INFO
TACACS_LOG_FILE=logs/tacacs.log
TACACS_DB_POOL_SIZE=5
